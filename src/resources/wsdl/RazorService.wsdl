			</input>
			<output>
				<soap:body use="literal" />
			</output>
		</operation>

		<operation name="GetAvailability">
			<!-- Use 'literal' to include OTA XML as-is-->
			<soap:operation soapAction="" style="document" />
			<input>
				<soap:body use="literal" />
			</input>
			<output>
				<soap:body use="literal" />
			</output>
		</operation>

		<operation name="GetDescription">
			<soap:operation soapAction="" style="document" />
