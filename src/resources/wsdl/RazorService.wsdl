				<soap:body use="literal" />
			</input>
			<output>
				<soap:body use="literal" />
			</output>
		</operation>

	</binding>
	
	<!-- Define SOAP interface with previously declared binding -->
	<service name="RazorService">
		<port name="RazorPort" binding="ota:RazorBinding">
			<!-- Test with
			<soap:address location="http://localhost:8080/service/xml/soap" />
			<soap:address location="http://10.0.0.101:8080/service/xml/soap" />
			-->
			<soap:address location="http://razorpms.com/soap/ota" />
		</port>
	</service>
	
</definitions> 
